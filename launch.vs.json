{
  "version": "0.2.1",
  "defaults": {},
  "configurations": [
    {
      "type": "cppdbg",
      "name": "Debug (local VM)",
      "project": "makefile",
      "cwd": "${workspaceRoot}",
      "MIMode": "gdb",
      "miDebuggerPath": "${workspaceRoot}/tools/gdb.bat",
      "program": "${workspaceRoot}/bin/dpmitest-debug.exe",
      "externalConsole": true,
      "customLaunchSetupCommands": [
        { "text": "symbol-file ../bin/dpmitest-debug.exe" },
        { "text": "target remote :3333" }
      ],
      "targetArchitecture": "x86"
    },
    {
      "type": "cppdbg",
      "name": "Debug (serial COM1)",
      "project": "makefile",
      "cwd": "${workspaceRoot}/tools/",
      "MIMode": "gdb",
      "miDebuggerPath": "${workspaceRoot}/tools/gdb.bat",
      "program": "${workspaceRoot}/bin/dpmitest-debug.exe",
      "externalConsole": true,
      "customLaunchSetupCommands": [
        { "text": "symbol-file ../bin/dpmitest-debug.exe" },
        { "text": "set serial baud 115200" },
        { "text": "target remote COM1" }
      ],
      "targetArchitecture": "x86"
    }
  ]
}

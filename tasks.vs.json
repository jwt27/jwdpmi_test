{
  "version": "0.2.1",
  "tasks": [
    {
      "appliesTo": "/src/*.cpp",
      "type": "launch",
      "taskLabel": "build-all",
      "contextType": "build",
      "workingDirectory": "${workspaceRoot}",
      "command": "${workspaceRoot}/make_vs.bat",
      "args": [
        "${workspaceRoot}",
        "all"
      ],
      "output": "bin/*.exe"
    },
    {
      "appliesTo": "/src/*.cpp",
      "type": "launch",
      "taskLabel": "rebuild-all",
      "contextType": "rebuild",
      "workingDirectory": "${workspaceRoot}",
      "command": "${workspaceRoot}/make_vs.bat",
      "args": [
        "${workspaceRoot}",
        "-B",
        "all"
      ],
      "output": "bin/*.exe"
    },
    {
      "appliesTo": "/src/*.cpp",
      "type": "launch",
      "taskLabel": "clean-all",
      "contextType": "clean",
      "workingDirectory": "${workspaceRoot}",
      "command": "${workspaceRoot}/make_vs.bat",
      "args": [
        "${workspaceRoot}",
        "clean"
      ]
    }
  ]
}
